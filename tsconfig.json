{
  "compilerOptions": {
    "lib": ["es2020"],
    "allowJs": true,
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./build",
    "rootDir": "./src",
    "alwaysStrict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true
  },
  "include": ["./src/**.ts"],
  "exclude": ["node_modules"]
}
